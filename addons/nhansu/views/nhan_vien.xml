<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_nhan_vien_form" model="ir.ui.view">
            <field name="name">nhan_vien</field>
            <field name="model">nhan_vien</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_read_only" style="font-size:25px">Nhân viên</div>
                        <group col="4" string="Thông tin cá nhân">
                            <field name="ho_ten_dem"/>
                            <field name="ten"/>
                            <field name="ho_va_ten" readonly="1"/>
                            <field name="ma_dinh_danh"/>
                            <field name="ngay_sinh"/>
                            <field name="tuoi" readonly="1"/>
                            <field name="so_nguoi_bang_tuoi" readonly="1"/>
                            <field name="que_quan"/>
                            <field name="email"/>
                            <field name="so_dien_thoai"/>
                            <field name="anh" widget="image"/>
                        </group>
                        <group col="4" string="Thông tin công việc">
                            <field name="phong_ban_id"/>
                            <field name="chuc_vu_id"/>
                            <field name="ngay_vao_lam"/>
                            <field name="ngay_ket_thuc"/>
                            <field name="trang_thai"/>
                        </group>
                        <group col="4" string="Thông tin tracking">
                            <field name="nguoi_tao" readonly="1"/>
                            <field name="nguoi_sua_cuoi" readonly="1"/>
                        </group>
                        <notebook>
                            <page string="Danh sách lịch sử công tác">
                                <field name="lich_su_cong_tac_ids">
                                    <tree>
                                        <field name="phong_ban_id"/>
                                        <field name="chuc_vu_id"/>
                                        <field name="ngay_bat_dau"/>
                                        <field name="ngay_ket_thuc"/>
                                        <field name="loai_chuc_vu"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Danh sách chứng chỉ bằng cấp">
                                <field name="danh_sach_chung_chi_bang_cap_ids">
                                    <tree>
                                        <field name="chung_chi_bang_cap_id"/>
                                        <field name="ngay_cap"/>
                                        <field name="ngay_het_han"/>
                                        <field name="trang_thai"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_nhan_vien_tree" model="ir.ui.view">
            <field name="name">nhan_vien</field>
            <field name="model">nhan_vien</field>
            <field name="arch" type="xml">
                <tree decoration-info="trang_thai == 'dang_lam_viec'" decoration-muted="trang_thai == 'nghi_viec'">
                    <field name="ma_dinh_danh"/>
                    <field name="ho_va_ten"/>
                    <field name="phong_ban_id"/>
                    <field name="chuc_vu_id"/>
                    <field name="ngay_sinh"/>
                    <field name="tuoi"/>
                    <field name="trang_thai"/>
                    <field name="email"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="nhan_vien_search">
            <field name="model">nhan_vien</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ma_dinh_danh"/>
                    <field name="ho_va_ten"/>
                    <field name="phong_ban_id"/>
                    <field name="chuc_vu_id"/>
                    <field name="ngay_sinh"/>
                    <field name="trang_thai"/>
                    <filter string="Đang làm việc" name="dang_lam_viec" domain="[('trang_thai', '=', 'dang_lam_viec')]"/>
                    <filter string="Nghỉ việc" name="nghi_viec" domain="[('trang_thai', '=', 'nghi_viec')]"/>
                </search>
            </field>
        </record>

        <record id="action_nhan_vien" model="ir.actions.act_window">
            <field name="name">Nhân viên</field>
            <field name="res_model">nhan_vien</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref = "nhan_vien_search"/>
        </record>
    </data>
</odoo>
    
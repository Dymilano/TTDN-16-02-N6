<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_phong_ban_form" model="ir.ui.view">
            <field name="name">phong_ban</field>
            <field name="model">phong_ban</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_read_only" style="font-size:25px">Phòng ban</div>
                        <group col="4" string="Thông tin chung">
                            <field name="ma_phong_ban"/>
                            <field name="ten_phong_ban"/>
                            <field name="parent_id"/>
                            <field name="truong_phong_id"/>
                            <field name="trang_thai"/>
                            <field name="so_nhan_vien" readonly="1"/>
                        </group>
                        <group col="4" string="Thông tin liên hệ">
                            <field name="dia_chi"/>
                            <field name="so_dien_thoai"/>
                            <field name="email"/>
                        </group>
                        <group col="12" string="Mô tả">
                            <field name="mo_ta" nolabel="1"/>
                        </group>
                        <notebook>
                            <page string="Phòng ban con">
                                <field name="child_ids">
                                    <tree>
                                        <field name="ma_phong_ban"/>
                                        <field name="ten_phong_ban"/>
                                        <field name="truong_phong_id"/>
                                        <field name="so_nhan_vien"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_phong_ban_tree" model="ir.ui.view">
            <field name="name">phong_ban</field>
            <field name="model">phong_ban</field>
            <field name="arch" type="xml">
                <tree decoration-info="parent_id == False" decoration-muted="trang_thai == 'dong_cua'">
                    <field name="ma_phong_ban"/>
                    <field name="ten_phong_ban"/>
                    <field name="parent_id"/>
                    <field name="truong_phong_id"/>
                    <field name="so_nhan_vien"/>
                    <field name="trang_thai"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="phong_ban_search">
            <field name="model">phong_ban</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ma_phong_ban"/>
                    <field name="ten_phong_ban"/>
                    <field name="truong_phong_id"/>
                    <field name="trang_thai"/>
                    <filter string="Hoạt động" name="hoat_dong" domain="[('trang_thai', '=', 'hoat_dong')]"/>
                    <filter string="Tạm dừng" name="tam_dung" domain="[('trang_thai', '=', 'tam_dung')]"/>
                </search>
            </field>
        </record>

        <record id="action_phong_ban" model="ir.actions.act_window">
            <field name="name">Phòng ban</field>
            <field name="res_model">phong_ban</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref = "phong_ban_search"/>
        </record>
    </data>
</odoo>


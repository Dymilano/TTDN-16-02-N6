<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tai_san_location_form" model="ir.ui.view">
        <field name="name">tai_san.location.form</field>
        <field name="model">tai_san.location</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="parent_id"/>
                            <field name="location_type"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tai_san_location_tree" model="ir.ui.view">
        <field name="name">tai_san.location.tree</field>
        <field name="model">tai_san.location</field>
        <field name="arch" type="xml">
            <tree>
                <field name="display_name"/>
                <field name="location_type"/>
                <field name="parent_id"/>
            </tree>
        </field>
    </record>

    <record id="action_tai_san_location" model="ir.actions.act_window">
        <field name="name">Địa điểm Tài sản</field>
        <field name="res_model">tai_san.location</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo địa điểm mới
            </p>
        </field>
    </record>

    <menuitem id="menu_tai_san_location"
              name="Địa điểm"
              parent="menu_tai_san_config"
              action="action_tai_san_location"
              sequence="10"/>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_phieu_su_dung_form" model="ir.ui.view">
            <field name="name">phieu.su.dung.form</field>
            <field name="model">phieu_su_dung</field>
            <field name="arch" type="xml">
                <form string="Phiếu sử dụng">
                    <header>
                        <button name="action_confirm" string="Xác nhận" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_cancel" string="Hủy" type="object" attrs="{'invisible': [('state', 'not in', ('draft', 'confirmed'))]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,cancelled"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="nhan_vien_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="bo_phan_id"/>
                            </group>
                            <group>
                                <field name="ngay_su_dung" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="ghi_chu"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Danh sách tài sản">
                                <field name="line_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                    <tree editable="bottom">
                                        <field name="tai_san_id"/>
                                        <field name="ghi_chu"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_phieu_su_dung_tree" model="ir.ui.view">
            <field name="name">phieu.su.dung.tree</field>
            <field name="model">phieu_su_dung</field>
            <field name="arch" type="xml">
                <tree string="Phiếu sử dụng">
                    <field name="name"/>
                    <field name="nhan_vien_id"/>
                    <field name="bo_phan_id"/>
                    <field name="ngay_su_dung"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_phieu_su_dung" model="ir.actions.act_window">
            <field name="name">Phiếu sử dụng</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">phieu_su_dung</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tạo phiếu sử dụng mới
                </p>
            </field>
        </record>
    </data>
</odoo>
